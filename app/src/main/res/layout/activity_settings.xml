<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <TextView
        android:id="@+id/header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:text="Settings"
        android:textColor="#FFFFFF"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/baseUrlLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/header"
        android:layout_alignParentStart="true"
        android:layout_marginTop="48dp"
        android:text="Base URL:"
        android:textColor="#FFFFFF" />

    <EditText
        android:id="@+id/baseUrl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/baseUrlLabel"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="22dp"
        android:layout_marginTop="-11dp"
        android:layout_toRightOf="@+id/baseUrlLabel"
        android:backgroundTint="#707070"
        android:hint="@string/baseUrl"
        android:inputType="text"
        android:textColor="#FFFFFF"
        android:textColorHint="#bdbdbd" />

    <Button
        android:id="@+id/saveButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/baseUrl"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:backgroundTint="#54788d"
        android:text="Save"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/darkLightModeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/saveButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:backgroundTint="#54788d"
        android:text="Toggle Light/Dark Mode"
        android:textColor="@color/button_text_color"/>

</RelativeLayout>
